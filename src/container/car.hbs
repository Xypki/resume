{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    <section>
        <div class="pt-4">
            <div>
                <h1>{{make}}</h1>
                <h2>{{model}} <span class="badge rounded-pill bg-success"><date>{{year}}</date></span></h2>
                <h3><span class="badge bg-secondary">{{color}}</span></h3>
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section>
        <div>
            <div>
                {{#with features}}
                <div>
                    {{#with interior}}
                    <h1 class="mb-5">Interior</h1>
                        <div>
                            <h2 class="mb-4">Seats</h2>
                            <ul>
                                <div>
                                    {{#with seats}}
                                        <li>
                                            <span class="badge text-bg-light">{{material}}</span>
                                        </li>
                                        <li>
                                            <span class="badge text-bg-dark">{{color}}</span>
                                        </li>
                                        <li>
                                            {{#if heated}}
                                            <span class="badge text-bg-success">heated</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">not heated</span>
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if ventilated}}
                                            <span class="badge text-bg-success">ventilated</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">not ventilated</span>
                                            {{/if}}
                                        </li>
                                    {{/with}}
                                </div>
                            </ul>
                            <h2 class="my-4">Dashboard</h2>
                            <ul>
                                <div>
                                    {{#with dashboard}}
                                        <li>
                                            <span class="badge text-bg-light">{{material}}</span>
                                        </li>
                                        <li>
                                            <span class="badge text-bg-dark">{{color}}</span>
                                        </li>
                                        <li>
                                            <span class="badge text-bg-warning">display</span>
                                        </li>
                                        <div>
                                            <ul>
                                                {{#with display}}
                                                    <li>
                                                        <span class="badge rounded-pill text-bg-primary">{{type}}</span>
                                                    </li>
                                                    <li>
                                                        <span class="badge rounded-pill text-bg-info">{{size}}</span>
                                                    </li>
                                                    <li>
                                                        <span class="badge rounded-pill text-bg-light">{{resolution}}</span>
                                                    </li>
                                                    <li>
                                                        {{#if touchscreen}}
                                                        <span class="badge rounded-pill text-bg-success">touchscreen</span>
                                                        {{else}}
                                                        <span class="badge rounded-pill text-bg-danger">not touchscreen</span>
                                                        {{/if}}
                                                    </li>
                                                {{/with}}
                                            </ul>
                                        </div>
                                    {{/with}}
                            </ul>
                            <h2 class="my-4">Audio</h2>
                            <ul>
                                <div>
                                {{#with audio}}
                                    <div>
                                        <li>
                                            <span class="badge text-bg-primary">{{system}}</span>
                                        </li>
                                        <li>
                                            <span class="badge text-bg-danger">{{speakers}} speakers</span>
                                        </li>
                                        <li>
                                            {{#if subwoofer}}
                                                <span class="badge rounded-pill text-bg-success">subwoofer</span>
                                                {{else}}
                                                no subwoofer
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if bluetooth}}
                                                <span class="badge rounded-pill text-bg-info">bluetooth</span>
                                                {{else}}
                                                no bluetooth
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if bluetooth}}
                                                <span class="badge rounded-pill text-bg-warning">USB</span>
                                                {{else}}
                                                no USB
                                            {{/if}}
                                        </li>
                                    </div>
                                {{/with}}
                            </ul>
                        </div>
                    {{/with}}
                    </div>
                    <hr class="my-5">
                    <div>
                    <h1 class="mb-5">Exterior</h1>
                    {{#with exterior}}
                        <div>
                            <div>
                            <h2 class="my-4">Wheels</h2>
                                <div>
                                    <ul>
                                    {{#with wheels}}
                                        <li>
                                            <span class="badge rounded-pill text-bg-info">{{size}} size</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-success">{{type}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-light">{{color}}</span>
                                        </li>
                                    {{/with}}
                                </ul>
                            </div>
                            <div>
                            <h2 class="my-4">Headlights</h2>
                                <div>
                                    <ul>
                                        {{#with headlights}}
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">{{type}} size</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-light">{{brightness}}</span>
                                        </li>
                                        <li>
                                            {{#if automatic}}
                                            <span class="badge rounded-pill text-bg-success">automatic</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">not automatic</span>
                                            {{/if}}
                                        </li>
                                        {{/with}}
                                    </ul>
                                </div>
                            </div>
                            <div>
                            <h2 class="my-4">Sunroof</h2>
                                <div>
                                    <ul>
                                        {{#with sunroof}}
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">{{type}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-info">{{size}}</span>
                                        </li>
                                        <li>
                                            {{#if automatic}}
                                            <span class="badge rounded-pill text-bg-success">automatic</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">not automatic</span>
                                            {{/if}}
                                        </li>
                                        {{/with}}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    {{/with}}
                    </div>
                    <hr class="my-5">
                    <div>
                    <h1 class="mb-5">Safety</h1>
                    {{#with safety}}
                        <div>
                            <h2 class="my-4">Airbags</h2>
                            <div>
                                <ul>
                                {{#with airbags}}
                                    <div>
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">front: {{front}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">side: {{side}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">knee: {{knee}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-primary">rear: {{rear}}</span>
                                        </li>
                                    </div>
                                {{/with}}
                                </ul>
                            </div>
                        </div>
                        <div>
                            <h2 class="my-4">Assistance</h2>
                            <div>
                                <ul>
                                {{#with assistance}}
                                    <div>
                                        <li>
                                            {{#if blind_spot_monitoring}}
                                            <span class="badge rounded-pill text-bg-success">blind spot monitoring</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">no blind spot monitoring</span>
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if rear_cross_traffic_alert}}
                                            <span class="badge rounded-pill text-bg-success">rear cross traffic alert</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">no rear cross traffic alert</span>
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if lane_departure_warning}}
                                            <span class="badge rounded-pill text-bg-success">lane departure warning</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">no lane departure warning</span>
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if adaptive_cruise_control}}
                                            <span class="badge rounded-pill text-bg-success">adaptive cruise control</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">no adaptive cruise control</span>
                                            {{/if}}
                                        </li>
                                        <li>
                                            {{#if collision_warning}}
                                            <span class="badge rounded-pill text-bg-success">collision warning</span>
                                            {{else}}
                                            <span class="badge rounded-pill text-bg-danger">no collision warning</span>
                                            {{/if}}
                                        </li>
                                    </div>
                                {{/with}}
                                </ul>
                            </div>
                        </div>
                    {{/with}}
                    </div>
                    </div>
                {{/with}}
                <hr class="my-5">
                <div>
                <h1 class="mb-4">Engine</h1>
                    <div>
                        {{#with engine}}
                        <div>
                            <ul>
                                <div>
                                    <li>
                                        <big><span class="badge rounded-pill text-bg-primary">{{type}}</span></big>
                                    </li>
                                    <li>
                                        <big><span class="badge rounded-pill text-bg-warning">displacement {{displacement}}</span></big>
                                    </li>
                                    <li>
                                        <big><span class="badge rounded-pill text-bg-info">{{horsepower}} hp</span></big>
                                    </li>
                                    <li>
                                        <big><span class="badge rounded-pill text-bg-light">torque {{torque}}</span></big>
                                    </li>
                                    <li>
                                        <big><span class="badge rounded-pill text-bg-dark">transmission</span></big>
                                    </li>
                                    <ul>
                                        {{#with transmission}}
                                        <div>
                                            <li>
                                                <span class="badge rounded-pill text-bg-primary">{{type}}</span>
                                            </li>
                                            <li>
                                                <span class="badge rounded-pill text-bg-info">gears {{gears}}</span>
                                            </li>
                                        </div>
                                        {{/with}}
                                    </ul>
                                </div>
                            </ul>
                        </div>
                        {{/with}}
                    </div>
                </div>
                <hr class="my-5">
                <div>
                <h1 class="mb-4">Fuel economy</h1>
                <div>
                {{#with fuel_economy}}
                    <div>
                        <ul>
                            <div>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-primary">city {{city}}</span></big>
                                </li>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-primary">highway {{highway}}</span></big>
                                </li>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-primary">combined {{combined}}</span></big>
                                </li>
                            </div>
                        </ul>
                    </div>
                    {{/with}}
                </div>
                <hr class="my-5">
                <div>
                <h1 class="mb-4">Price</h1>
                <div>
                    {{#with price}}
                    <div>
                        <ul>
                            <div>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-primary">base: {{base}}</span></big>
                                </li>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-warning">destination {{destination}}</span></big>
                                </li>
                                <li>
                                    <big><span class="badge rounded-pill text-bg-info">options</span></big>
                                </li>
                                <ul>
                                    {{#with options}}
                                    <div>
                                        <li>
                                            <span class="badge rounded-pill text-bg-success">navigation {{navigation}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-success">moonroof {{moonroof}}</span>
                                        </li>
                                        <li>
                                            <span class="badge rounded-pill text-bg-success">premium paint {{premium_paint}}</span>
                                        </li>
                                    </div>
                                    {{/with}}
                                </ul>
                            </div>
                        </ul>
                        <h3 class="mt-4">Total: {{total}}</h3>
                    </div>
                    {{/with}}
                </div>
                </div>
            </div>
        </div>
    </section>
</div>

