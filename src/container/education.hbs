<div>
    {{#with main}}
        <main>
            <section class="mb-4">
                {{> title data="My Educations" big=true}}
                <ul>
                    {{#each educations}}
                        <li>
                            {{name}}
                            {{#unless isEnd}} (Ще в процессi) {{/unless}}
                        </li>
                    {{/each}}
                </ul>
            </section>
            <section>
                {{> title data="My Certificates" big=false}}
                <ul>
                    {{#each certificates}}
                        <li>
                            {{name}} ({{id}})
                        </li>
                    {{/each}}
                </ul>
            </section>
        </main>
    {{/with}}
</div>