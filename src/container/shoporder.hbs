{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="ms-4">
    <section>
        <div>
            <div class="container">
                <div>
                    <h1 class="mb-5">{{header}}</h1>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        {{#with contacts_data}}
                        <div class="mb-3">
                            <h2>{{title}}</h2>
                        </div>
                        <div class="mb-3">
                            {{#each buttons}}
                            {{#if isPrimary}}
                            <button type="button" class="btn btn-warning me-2">{{text}}</button>
                            {{else}}
                                {{#if isOutline}}
                                <button type="button" class="btn btn-outline-warning">{{text}}</button>
                                {{/if}}
                            {{/if}}
                            {{/each}}
                        </div>
                        {{#with form}}
                        <div class="row">
                            {{#with input}}
                            <div class="col-md-6">
                                {{#with surname}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text mb-3">
                                        {{caption}}
                                    </div>
                                {{/with}}
                                {{#with phone}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text">
                                        {{caption}}
                                    </div>
                                {{/with}}
                            </div>
                            <div class="col-md-6">
                                {{#with name}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text mb-3">
                                        {{caption}}
                                    </div>
                                {{/with}}
                                {{#with email}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                    <div class="form-text">
                                        {{caption}}
                                    </div>
                                {{/with}}
                            </div>
                            {{/with}}
                        </div>
                        <hr class="my-4">
                        <div>
                            {{#each switch}}
                            <div class="form-check form-switch mb-4">
                                <label class="form-check-label mb-1">{{text}}</label>
                                {{#if isActive}}
                                <input type="checkbox" class="form-check-input active" checked>
                                {{else}}
                                <input type="checkbox" class="form-check-input">
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        {{/with}}
                        {{/with}}
                        <hr class="my-4">
                        <div>
                            {{#with delivery}}
                            <h2 class="mb-3">{{title}}</h2>
                            <div class="card">
                                <div class="card-body row py-2">
                                    {{#each select}}
                                    <div class="col-md-6">
                                        <label>{{label}}</label>
                                        <select class="form-select">
                                            <option selected>{{placeholder}}</option>
                                            {{#each options}}
                                            <option value="{{value}}">{{text}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                            {{#each delivery_type}}
                            <div class="form-check my-3">
                                {{#if @first}}
                                <input class="form-check-input" type="radio" checked>
                                {{else}}
                                <input class="form-check-input" type="radio">
                                {{/if}}
                                <label class="form-check-label">
                                    {{type}}
                                </label>
                            </div>
                            {{/each}}
                            <hr class="my-4">
                            <div>
                                {{#with payment}}
                                <h2 class="mb-3">{{title}}</h2>
                                {{#each list}}
                                <div class="form-check my-2">
                                    <label class="form-check-label">
                                        {{type}}
                                    </label>
                                    {{#if @first}}
                                    <input class="form-check-input" type="radio" checked>
                                    {{else}}
                                    <input class="form-check-input" type="radio">
                                    {{/if}}
                                </div>
                                <div class="form-text">
                                    {{description}}
                                </div>
                                {{/each}}
                                {{/with}}
                            </div>
                            <hr class="my-4">
                            <div>
                                {{#with contact}}
                                <h2 class="mb-3">{{title}}</h2>
                                <div class="row">
                                <div class="col-md-6">
                                    {{#with surname}}
                                        <label class="form-label mb-1">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text mb-3">
                                            {{caption}}
                                        </div>
                                    {{/with}}
                                    {{#with phone}}
                                        <label class="form-label mb-1">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">
                                            {{caption}}
                                        </div>
                                    {{/with}}
                                </div>
                                <div class="col-md-6">
                                    {{#with name}}
                                        <label class="form-label mb-1">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text mb-3">
                                            {{caption}}
                                        </div>
                                    {{/with}}
                                    {{#with email}}
                                        <label class="form-label mb-1">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text">
                                            {{caption}}
                                        </div>
                                    {{/with}}
                                </div>
                            </div>
                                {{/with}}
                            <hr class="my-4">
                            <div>
                                {{#with coment}}
                                <div>
                                    <label class="form-label mb-0">{{label}}</label>
                                    <input class="form-control" placeholder="{{placeholder}}">
                                </div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}
                        <hr class="my-4">
                        <div>
                            {{#with coupon}}
                            <h2 class="mb-3">{{title}}</h2>
                            {{#with select}}
                                <div class="mb-3">
                                    {{#with availabel_coupon}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <select class="form-select form-select-lg mb-3">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                    {{/with}}
                                </div>
                                <div>
                                    {{#with friend_coupon}}
                                    <label class="form-label mb-1">{{label}}</label>
                                    <select class="form-select form-select-sm mb-3">
                                        <option selected>{{placeholder}}</option>
                                        {{#each options}}
                                        <option value="{{value}}">{{text}}</option>
                                        {{/each}}
                                    </select>
                                    {{/with}}
                                </div>
                            {{/with}}
                            {{#with add}}
                            <div>
                                {{#with friend}}
                                <div class="mb-3">
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control form-control-lg" placeholder="{{placeholder}}">
                                    <div class="form-text">
                                        {{caption}}
                                    </div>
                                </div>
                                {{/with}}
                                {{#with colleague}}
                                <div>
                                    <label class="form-label mb-1">{{label}}</label>
                                    <input class="form-control form-control-sm" placeholder="{{placeholder}}">
                                    <div class="form-text">
                                        {{caption}}
                                    </div>
                                </div>
                                {{/with}}
                            </div>
                            {{/with}}
                            {{/with}}
                        </div>
                        <hr class="my-4">
                        <div>
                            {{#with quiz}}
                            <h2 class="mb-3">{{title}}</h2>
                            {{#with preference}}
                            {{title}}
                            {{#each options}}
                            <div class="form-check my-2">
                                <label class="form-check-label">
                                    {{this}}
                                </label>
                                {{#if @first}}
                                <input class="form-check-input" type="radio" checked>
                                {{else}}
                                <input class="form-check-input" type="radio">
                                {{/if}}
                            </div>
                            {{/each}}
                            {{/with}}
                            {{#with your_expirience}}
                            <div class="mb-3">
                                <label class="form-label mb-1">{{label}}</label>
                                <input class="form-control">
                            </div>
                            {{/with}}
                            {{#with purchase_frequency}}
                            <div class="mb-3">
                                <label class="form-label mb-1">{{label}}</label>
                                <select class="form-select">
                                    <option selected>{{placeholder}}</option>
                                    {{#each options}}
                                    <option value="{{value}}">{{text}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{/with}}
                            {{#with factors}}
                            <div class="mb-2">
                                {{title}}
                                {{#each options}}
                                <div class="form-check my-2">
                                    {{#if @first}}
                                    <input class="form-check-input" type="checkbox" checked>
                                    {{else}}
                                    <input class="form-check-input" type="checkbox">
                                    {{/if}}
                                    <label class="form-check-label">
                                        {{this}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                            {{/with}}
                            {{/with}}
                        </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body px-2 py-3">
                            {{#each action_block}}
                                <div>
                                {{#if isSuccess}}
                                <button type="button" class="btn btn-success mb-2">{{text}}</button>
                                {{else}}
                                {{#if isDanger}}
                                <button type="button" class="btn btn-danger mb-2">{{text}}</button>
                                {{/if}}
                                {{#if isInfo}}
                                <button type="button" class="btn btn-info">{{text}}</button>
                                {{/if}}
                                {{/if}}
                                </div>
                            {{/each}}
                            </div>
                        </div>
                        {{#with total}}
                        <div>
                            <div class="card">
                                <div class="card-body px-2 py-3">
                                    <div class="card-title"><h2 class="mb-2">{{title}}</h2></div>
                                    {{#each item_list}}
                                    <div class="mb-1">
                                        {{name}}: {{price}}
                                    </div>
                                    {{/each}}
                                    <hr class="my-2">
                                    {{#each additional_info}}
                                    <div class="mb-1">
                                        {{text}}: {{value}}
                                    </div>
                                    {{/each}}
                                    <hr class="my-2">
                                    {{#with total_price}}
                                        {{text}}: {{value}}
                                    {{/with}}
                                    <hr class="my-2">
                                    {{#each button}}
                                        <div class="mt-3">
                                            {{#if isPrimary}}
                                            <button type="button" class="btn btn-primary">{{text}}</button>
                                            {{else}}
                                            {{#if isOutline}}
                                            <button type="button" class="btn btn-outline-primary">{{text}}</button>
                                            {{/if}}
                                            {{/if}}
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

