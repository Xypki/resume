{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    <section>
        {{#with person}}
            <div>
                <div class="mb-3">
                    <h1 class="pt-4">{{name}}</h1>
                    <em>
                        {{gender}}
                        {{age}}
                    </em>
                </div>
                <div>
                    <em>
                        {{#with address}}
                            <address>
                                {{street}}
                                {{city}}
                                {{country}}
                                {{state}}
                                {{zip}}
                            </address>
                        {{/with}}
                    </em>
                </div>
            </div>
        <hr class="my-5">
    </section>
        <div class="mb-4">
            <section>
                <h1 class="mb-4">Education</h1>
                <ul>
                {{#each education}}
                    <li>
                        <p><strong>{{university}}</strong></p>
                        <p class="mb-4">
                            <em>
                                <date>Graduation date: {{graduationYear}}</date>
                            </em>
                        </p>
                        <ul>
                            <li>
                                {{degree}}
                            </li>
                            <li>
                                {{major}}
                            </li>
                        </ul>
                    </li>
                {{/each}}
                </ul>
            </section>
        </div>
        <div>
            <section>
                <div class="mb-4">
                <h1 class="mb-4">Work experience</h1>
                <ul>
                    {{#each workExperience}}
                        <li>
                            <p><strong>{{company}}</strong></p>
                            {{title}}
                            <p class="mb-4 mt-3">
                                <em>
                                    <date>{{startDate}} - {{endDate}}</date>
                                </em>
                            </p>
                        </li>
                </div>
                <div class="mb-4">
                        <h2 class="mb-4">Responsibilities</h2>
                        <em>
                            <p>{{responsibilities}}</p>
                            <date>{{year_founded}}</date>
                        </em>
                        <p class="mt-3">{{industry}}</p>
                    </div>
                    <div class="mb-4">
                        <h2 class="mb-4">Employees</h2>
                        {{#each employees}}
                        <ul>
                            <li>
                                <div>
                                <p><strong>{{name}}</strong></p>
                                <abbr>{{position}}</abbr>
                                <p class="mt-3">
                                    <em>
                                        {{department}}
                                    </em>
                                </p>
                                <h3 class="mb-4">Projects</h3>
                                {{#each projects}}
                                <ul>
                                    <li>
                                        <p><strong>{{name}}</strong></p>
                                        <p><em>{{description}}</em></p>
                                        {{status}}
                                        <h4 class="my-4">Teams</h4>
                                        {{#each teams}}
                                        <ul>
                                            <li>
                                                <p><strong>{{team_name}}</strong></p>
                                                {{#with team_leader}}
                                                    <strong>{{name}}</strong>
                                                    <p class="mt-3"><em>{{title}}</em></p>
                                                    <a href="#">{{email}}</a>
                                                {{/with}}
                                                <ul>
                                                    <li>
                                                <h4 class="my-4">Team members</h4>
                                                {{#each team_members}}
                                                <ul>
                                                    <li>
                                                        <p><strong>{{name}}</strong></p>
                                                        <p><em>{{title}}</em></p>
                                                        <a href="#">{{email}}</a>
                                                        <p class="mt-3">{{skills}}</p>
                                                        <ul>
                                                        <li>
                                                        <h4 class="mb-4">Projects</h4>
                                                        {{#each projects}}
                                                            <ul>
                                                                <li>
                                                                    <p><strong>{{name}}</strong></p>
                                                                    <em>{{description}}</em>
                                                                    <p class="mt-3">{{technologies}}</p>
                                                                    <ul>
                                                                        <li>
                                                                    <h4 class="my-4">Team members</h4>
                                                                    {{#each team_members}}
                                                                    <ul>
                                                                        <li>
                                                                            <strong>{{name}}</strong>
                                                                            <p class="mb-4"><em>{{title}}</em></p>
                                                                        </li>

                                                                    </ul>
                                                                    {{/each}}
                                                                    </li>
                                                                </ul>

                                                                </li>
                                                            </ul>
                                                        {{/each}}
                                                        </li>
                                                        </ul>

                                                    </li>
                                                </ul>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                        {{/each}}
                                        {{/each}} 
                                        </div>
                                    </li>
                                </ul>

            
                            </li>
                        </ul>
                        {{/each}}
                        {{/each}}
                    </div>
                    {{/each}}
                </ul>

            </section>
        </div>
        <hr class="mt-5">
    {{/with}}
</div>

