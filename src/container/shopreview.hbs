{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="ms-4">
    <section>
        <div>
            <div class="row">
                <div class="col-md-8">
                    {{#with formBlock}}
                    <div>
                        <h1 class="mt-2 mb-3">{{header}}</h1>
                        <div>
                        {{#with rating}}
                            {{title}}: {{value}}
                        {{/with}}
                        </div>
                        {{#with actionBlock}}                        
                        <div>
                            <ul class="nav nav-tabs mt-4">
                                {{#each tabs}}
                                <li class="nav-item">
                                    {{#if isActive}}
                                    <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                                    {{else}}
                                    <a class="nav-link" aria-current="page" href="#">{{text}}</a>
                                    {{/if}}
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                        <hr class="my-5">
                        <div>
                            <div class="card">
                                {{#with report}}
                                <div class="card-body">
                                    <p class="mb-2">{{title}}</p>
                                    {{#with button}}
                                    <button type="button" class="btn btn-secondary" href="{{link}}">{{text}}</button>
                                    {{/with}}
                                </div>
                                {{/with}}
                            </div>
                        </div>
                        {{/with}}                        
                    </div>
                    <hr class="my-5">
                    {{#with feedbackBlock}}
                    <div>
                        <h2 class="mb-5">{{title}}</h2>
                        {{#each buttons}}
                        {{#if isWarning}}
                        <button type="button" class="btn btn-warning me-2" href="{{link}}">{{text}}</button>
                        {{/if}}
                        {{#if isSuccess}}
                        <button type="button" class="btn btn-success me-2" href="{{link}}">{{text}}</button>
                        {{/if}}
                        {{#if isDanger}}
                        <button type="button" class="btn btn-danger" href="{{link}}">{{text}}</button>
                        {{/if}}
                        {{/each}}
                    </div>
                    {{/with}}
                </div>
                <div class="col-md-4">
                    {{#with goodsInfo}}
                    <div class="card row mb-3">
                        <div class="card-body col-md-7">
                            <img src="{{photo}}" class="card-img mb-3" alt="Photo">
                            <strong>{{name}}</strong>
                        </div>
                    </div>
                    <div class="card row mb-3">
                        <div class="card-body pb-0 mb-2">
                            <h5>{{price}}</h5>
                            {{#if inMarket}}
                            <p class="mb-2">Є в наявності</p>
                            {{/if}}
                            {{#each buttons}}
                            <div class="mb-2">
                                {{#if isPrimary}}
                                <button type="button" class="btn btn-primary" href="{{link}}">{{text}}</button>
                                {{/if}}
                                {{#if isSecondary}}
                                <button type="button" class="btn btn-secondary" href="{{link}}">{{text}}</button>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="card row">
                        {{#with seller}}
                        <div class="card-body">
                            {{title}}: <strong>{{value}}</strong>
                        </div>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <hr class="my-5">
            <div>
                <div>
                    {{#each reviewList}}
                    <div class="card mb-5">
                        <div class="card-body">
                            <div class="card">
                                <div class="card-header px-2 py-1 mb-1">
                                    {{#with title}}
                                    <h5>{{userName}}</h5>
                                    <p class="mb-2">{{caption}}</p>
                                    <p class="mb-1"><date>{{date}}</date></p>
                                    {{/with}}
                                </div>
                                <div class="card-body px-2 py-1">
                                    {{#with reviewBody}}
                                    <div>
                                        {{#with seller}}
                                        {{title}}: {{value}}
                                        {{/with}}
                                    </div>
                                    <div class="my-4">
                                        {{#with rating}}
                                        {{title}}: {{value}}
                                        {{/with}}
                                    </div>
                                    <div>
                                        {{#each text}}
                                        {{#if @first}}
                                        {{this}}
                                        {{/if}}
                                        {{/each}}
                                    </div>
                                    <div class="my-4">
                                        {{#each text}}
                                        {{#if @last}}
                                        {{this}}
                                        {{/if}}
                                        {{/each}}
                                    </div>
                                    <div class="my-4">
                                        {{#with advantages}}
                                        <strong>{{title}}: </strong>
                                        <p>{{text}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="my-4">
                                        {{#with disadvantages}}
                                        <strong>{{title}}: </strong>
                                        <p>{{text}}</p>
                                        {{/with}}
                                    </div>
                                    <div class="my-4 row mb-2">
                                        {{#each images}}
                                        <div class="col-md-2 me-0 pe-0">
                                        <img src="{{this}}" class="card-img" alt="Image">
                                        </div>
                                        {{/each}}                                        
                                    </div>
                                </div>
                            </div>
                            {{#each coments}}
                            <div class="card ms-5 mt-4">
                                <div class="card-body">
                                    <h5>{{userName}}</h5>
                                    <date><p class="my-2">{{date}}</p></date>
                                    {{text}}
                                </div>
                            </div>
                            {{/each}}
                            {{/with}}
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div>
                {{> shopaction}}
            </div>
        </div>
    </section>
</div>

