{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="ms-4">
    <section>
        <div>
            <div>
                {{> breadcrumb}}
            </div>
            <h1 class="my-4">{{header}}</h1>
            <div class="row">
                {{#each sortBlock}}
                <div class="col-md-3 pe-0 mb-5">
                    <select class="form-select">
                    <option selected>{{placeholder}}</option>
                    {{#each options}}
                        <option value="{{value}}">{{text}}</option>
                    {{/each}}
                    </select>
                </div>
                {{/each}}
            </div>
            <div class="row mb-5">
                <div class="col-md-4">
                    {{#with filterBlock}}
                    <div class="card">
                        <div class="card-body py-2">
                            {{#with sellers}}
                            <p>{{title}}</p>                            
                            {{#each list}}                            
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label mb-1">
                                        {{value}}
                                    </label>
                                </div>
                            </div>
                            {{/each}}                           
                            {{/with}}
                            <hr class="my-3">
                            {{#with brands}}
                            <div>
                                <p>{{title}}</p>
                                <div class="mb-3">
                                    {{#with input}}
                                        <input class="form-control" placeholder="{{placeholder}}">
                                    {{/with}}
                                </div>
                                {{#each options}}
                                <div class="mb-1">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox">
                                        <label class="form-check-label">
                                            {{value}}
                                        </label>
                                    </div>
                                </div>
                                {{/each}}                                
                            </div>
                            {{/with}}
                            <hr class="my-3">
                            {{#with price}}
                            <div>
                                <p>{{title}}</p>
                                <div class="mb-3">
                                    {{#with range}}
                                    <input class="form-control mb-3" placeholder="{{from}}">
                                    <input class="form-control mb-3" placeholder="{{to}}">
                                    {{/with}}
                                </div>
                                <div class="mb-3">
                                    {{#with button}}
                                        <button type="button" class="btn btn-outline-secondary" href="{{link}}">{{text}}</button>
                                    {{/with}}
                                </div>
                            </div>
                            {{/with}}
                            <hr class="my-3">
                            {{#each filterList}}
                            {{#if @last}}
                            <div>
                                <p class="mb-2">{{title}}</p>
                                {{#each options}}
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        {{value}}
                                    </label>
                                </div>
                                {{/each}}
                            </div>
                            {{else}}
                            <div>
                                <p class="mb-2">{{title}}</p>
                                {{#each options}}
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox">
                                    <label class="form-check-label">
                                        {{value}}
                                    </label>
                                </div>
                                {{/each}}
                            <hr class="my-3">
                            </div>
                            {{/if}}
                            {{/each}}                      
                        </div>
                    </div>
                    {{/with}}
                </div>
                <div class="col-md-8">
                    {{> catalogItem}}
                </div>
            </div>
            <div>
                {{> shopaction}}
            </div>
        </div>
    </section>
</div>

