{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="ms-4">
    <section>
        {{#with newsBlock}}
        <div>
            <h2 class="mb-4 text-center">{{title}}</h2>
            <div class="row">
            {{#each cards}}
            <div class="col-md-3 mb-4">
            <div class="card text-bg-dark mb-2">
                <div class="card-header">
                    {{title}}
                    {{#if isTop}}
                        <span class="badge text-bg-danger rounded-pill">Top</span>
                    {{/if}}
                    {{#if isNew}}
                        <span class="badge text-bg-success rounded-pill">New</span>
                    {{/if}}
                </div>
                <div class="card-body">
                {{description}}
                </div>
            </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr class="mb-5 mt-4">
    <section>
        <div>
        {{#with goodsBlock}}
            <div class="mb-5">
                <ul class="nav nav-tabs">
                    {{#each tabs}}
                    <li class="nav-item">
                        {{#if isActive}}
                            <a class="nav-link active" aria-current="page" href="#">{{text}}</a>
                        {{/if}}
                        {{#if isDisabled}}
                            <a class="nav-link disabled" aria-current="page" href="#">{{text}}</a>
                         {{/if}}
                        {{#unless isActive}}
                            {{#unless isDisabled}}
                                <a class="nav-link" aria-current="page" href="#">{{text}}</a>
                            {{/unless}}
                        {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </div>
            <div>
                {{> shopcard}}
            </div>
        {{/with}}
        </div>
    </section>
    <hr class="mb-5 mt-4">
    <section>
        <div class="mx-2">
        {{#with subscribe}}
            <div class="alert bg-dark row text-light py-2 px-0">
                <div class="col-6">
                    <h2 class="mb-4">{{header}}</h2>
                    <p class="mb-1">{{description}}</p>
                </div>
                <div class="col-6 text-end mt-4">
                    {{#each buttons}}
                        <button class="btn btn-primary ms-2" href="{{link}}">{{text}}</button>
                    {{/each}}
                </div>
            </div>
        {{/with}}
        </div>
    </section>
    <hr class="my-5">
    <section>
        <div>
            {{> shopaction}}
        </div>
    </section>
</div>

