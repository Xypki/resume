{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    {{#with program}}
    {{#with excursion}}
    <section>
        <div>
            <div>
                <h1 class="pt-4">{{name}}</h1>
                {{#with location}}
                <em>
                    <address>
                        {{city}}
                        {{country}}
                    </address>
                {{/with}}
                    <br>
                    <date>{{date}}</date>
                </em>
            </div>
        </div>
    </section>
    <hr class="my-5">
    <section>
        <div>
            <div>
            <h2 class="mb-4">Program</h2>
            <ul>
            {{#each program}}
                <li>
                    <h3>{{name}}</h3>
                    <p class="mt-3">{{type}}</p>
                    <em>Duration: {{duration}}</em>
                    {{#with details}}
                        <div class="mb-5">
                            <ul>
                                <div>
                                    <li class="mt-4">
                                        {{#with museum}}
                                            <strong>{{name}}</strong>
                                            <p>{{#with location}}</p>
                                            <em>
                                                <address>
                                                    {{address}}
                                                    {{city}}
                                                    {{country}}
                                                </address>
                                            </em>
                                            {{/with}}
                                            <div class="mt-4">
                                                {{#each exhibits}}
                                                    <ul>
                                                        <div>
                                                            <li class="mb-4">
                                                                <p><strong>{{name}}</strong></p>
                                                                <em>
                                                                    {{#if artist}}
                                                                    {{artist}}
                                                                    {{else}}
                                                                    Unknown
                                                                    {{/if}}
                                                                    <p class="mt-3">{{description}}</p>
                                                                </em>
                                                                {{#if audio_guide}}
                                                                <a href="#">Audio guide</a>
                                                                {{/if}}
                                                            </li>
                                                        </div>
                                                    </ul>
                                                {{/each}}
                                            </div>
                                        {{/with}}
                                        <div class="mb-5">
                                        {{#with venue}}
                                            <p><strong>{{name}}</strong></p>
                                            {{#with location}}
                                            <em>
                                                <address>
                                                    {{address}}
                                                    {{city}}
                                                    {{country}}
                                                </address>
                                            </em>
                                            {{/with}}
                                        {{/with}}
                                        </div>
                                        <div>
                                            <ul>
                                                {{#each performers}}
                                                <li  class="mb-4">
                                                    <p><strong>{{name}}</strong></p>
                                                    <em>{{type}}</em>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </li>
                                </div>
                            </ul>
                        </div>
                        <div class="mb-5">
                            <h3 class="mb-4">Guide</h3>
                            {{#with guide}}
                                <p>Name: {{name}}</p>
                                <em>Language: {{language}}</em>
                                <p class="mt-3">Rating: {{rating}}</p>
                            {{/with}}
                        </div>
                    {{/with}}
                </li>
            {{/each}}
            </ul>
            </div>
        </div>
    </section>
    {{/with}}
    {{/with}}
</div>

