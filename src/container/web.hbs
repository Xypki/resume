{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div>
    <section>
        {{#with web}}
            <div>
                <div>
                    <h1>Languages</h1>
                    <hr class="my-5">
    </section>
    <section>
                    <ul>
                    <div>
                    {{#each languages}}
                    <li>
                        <h3 class="mb-4">{{name}}</h3>
                        {{version}}
                        <p class="mt-4"><em>{{description}}</em></p>
                        <div>
                        {{#each elements}}
                        <ul>
                            <li>
                                <h3>{{name}}</h3>
                                <em>{{description}}</em>
                                <ul class="mt-4">
                                <div>
                                {{#each attributes}}
                                    <li>
                                        <strong>{{name}}</strong>
                                        <p class="mb-4"><em>{{description}}</em></p>
                                    </li>
                                {{/each}}
                                </div>
                                </ul>
                            </li>
                        </ul>
                        {{/each}}
                        </div>
                    </li>
                    <div>
                    <ul>
                    <div>
                    {{#each properties}}
                        <li>
                            <h3>{{name}}</h3>
                            <p class="mt-2"><em>{{description}}</em></p>
                            <div>
                            <ul>
                            {{#each values}}
                                <li class="mb-4">
                                <strong>{{value}}</strong>
                                <p><em>{{description}}</em></p>
                                </li>
                            {{/each}}
                            </ul>
                            </div>
                        </li>
                    {{/each}}
                    </div>
                    </ul>
                    </div>
                    <div>
                        <ul>
                        {{#each functions}}
                            <li>
                                <h3>{{name}}</h3>
                                <p><em>{{description}}</em></p>
                                <div>
                                    <ul>
                                        {{#each parameters}}
                                            <li>
                                                <h4>{{name}}</h4>
                                                {{type}}  
                                                <p class="mt-2"><em>{{description}}</em></p>
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </li>
                        {{/each}}
                        </ul>
                    </div>
                    {{/each}}
                    </div>
                    </ul>
                </div>
            </div>
        {{/with}}
    </section>
</div>

