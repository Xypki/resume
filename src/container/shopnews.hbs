{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}
<div class="ms-4">
    <section>
        {{> breadcrumb}}
    </section>
    <section>
        <div>
            {{#with newsData}}
            <img src="{{photo}}" class="card-img-top" alt="Photo">
            {{#with head}}
            <div class="my-4">
                <h1>{{heading}}</h1>
                <p>{{description}}</p>
            </div>
            {{/with}}
            {{#each body}}
            <div class="my-5">
                <h2>{{title}}</h2>
                <p>{{text}}</p>
            </div>
            {{/each}}
            {{/with}}
        </div>
    </section>
    <hr class="my-5">
    <section>
        {{#with newsOtherBlock}}
        <div>
            <div>
                <h2 class="text-center mb-3">{{title}}</h2>
                {{> shoppost}}
            </div>
        </div>
        {{/with}}
    </section>
</div>

